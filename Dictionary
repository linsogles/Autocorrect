package program1;
import java.io.File;
public class Dictionary
{
    public static boolean checkWord(String dictWord, String wordToCheck, int place)
    {
     
        int difs = 0; //allow for only one difference btwn words
        
        while (difs <2) //while there is fewer than 2 differences found
        {
            for (int n = 0; n < wordToCheck.length(); n++) //for all characters in word
            {
                if (dictWord.charAt(n) != wordToCheck.charAt(n)) //if words are different at character
                {
                    difs++; //add a difference found
                }
                if (difs > 2) //if more than 2 differences found
                {
                    return false;
                }
            }
        }

        return true;
    }
}
