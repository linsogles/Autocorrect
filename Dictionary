package program1;
import java.io.File;
public class Dictionary
{

    public static boolean doesWordMatch(String dictWord, String wordToCheck)
    {
        boolean matches = true;
        
        for (int i = 0; i < wordToCheck.length()-1; i++) //start checking characters
        {
            if (wordToCheck.charAt(i) != dictWord.charAt(i)) //if the character at an index is different btwn words
            {
                for (int n = i; n < wordToCheck.length()-1; n++) //continue checking characters
                {
                    if (wordToCheck.charAt(n) == dictWord.charAt(n))
                    {
                        //Basically if the word is the same at every other character, return it.
                        //If the word is different at another character, end the loop.
                    }
                }
            } 
        }
        
        return matches;
    }
    
